{% extends 'base.html.twig' %}

{% block title %}{{ 'title.admin.invite'|trans }}{% endblock %}

{% block stylesheet %}
    <style>
        .select2-results__options>li{
            color: black;
        }
    </style>
{% endblock %}

{% block content %}
    <h4>Warning! Invite is only valid for 12 hours from its creation. You are able to delete this invite anytime you want.</h4>
    <br><br><br>
    {{ form_start(form) }}
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <div>
                <label class="textfield filled">
                    {{ form_widget(form.email, {'attr': {'style': 'color: white;'}}) }}
                    <span>Email</span>
                </label>
            <br><br>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="select-container filled">
                    {{ form_row(form.groups) }}
                </div>
            {% endif %}
            <br>
            <div class="col-8 offset-2 justify-content-center text-center">
                {{ form_row(form.submit, {'attr': {'class': 'btn'}}) }}
            </div>
        </div>
        <div class="col"></div>
    </div>
    {{ form_end(form) }}
{% endblock %}