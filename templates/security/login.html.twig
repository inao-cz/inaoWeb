{% extends 'base.html.twig' %}

{% block title %}{{ 'title.login'|trans }}{% endblock %}

{% block stylesheet %}
    <style>
        input, textarea{
            color: #FFFFFF!important;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container mx-auto h-full mt-7 flex justify-center items-center">
        <div class="w-1/3 text-black">
            <form method="post" class="text-white">
                {% if error %}
{#                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
                    <div class="bg-gray-800 text-center py-4 lg:px-4">
                        <span class="font-semibold text-white-700 mr-2 text-left flex-auto">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="p-8 mb-6 bg-gray-600 rounded text-white">
                    <h1 class="font-medium mb-6 text-center">Please sign in. :)</h1>
                    <div class="mb-4">
                        <label for="inputUsername">Username</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="block appearance-none w-full bg-gray-700 border-transparent px-2 py-2 shadow"
                               required autofocus>
                    </div>
                    <div class="mb-4">
                        <label for="inputPassword" class="text-left">Password</label>
                        <input type="password" name="password" id="inputPassword" class="block appearance-none w-full bg-gray-700 border-transparent px-2 py-2 shadow text-black" required>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </div>
                    <br>
                    <div class="mb-4 text-center">
                        <button class="bg-blue-600 hover:bg-green-700 p-4 transition-colors duration-150 ease-in-out rounded w-full" type="submit">
                            Sign in
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
